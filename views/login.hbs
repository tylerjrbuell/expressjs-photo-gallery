<div class="container-fluid">
  <div class="row no-gutter">
    <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>
    <div class="col-md-5 col-lg-6">
      <div class="login d-flex align-items-center py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-9 col-lg-8 mx-auto">
              <h2><i class="fa fa-film"></i></h2>
              <h3 class="login-heading mb-4">{{app_name}}</h3>
              <form action="/auth/login" method="POST">
                {{#if message.success}}
                  <div class="alert alert-success">{{message.success}}</div>
                {{/if}}
                {{#if message.failure}}
                  <div class="alert alert-danger">{{message.failure}}</div>
                {{/if}}
                <div class="form-label-group">
                  <input type="email" id="inputEmail" name="Email" class="form-control" placeholder="Email address" required autofocus>
                  <label for="inputEmail">Email address</label>
                </div>

                <div class="form-label-group">
                  <input type="password" id="inputPassword" name='Password' class="form-control" placeholder="Password" required>
                  <label for="inputPassword">Password</label>
                </div>
                
                <div class="custom-control custom-checkbox mb-3" style="padding-top: 20px;">
                  <input type="checkbox" class="custom-control-input" id="customCheck1" name="rememberMe">
                  <label class="custom-control-label" for="customCheck1" style="padding-right: 180px;">Remember password</label>
                </div>
                <button class="btn black btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" style="border-color: black;height: max-content;" type="submit">Sign in</button>
                <div class="section">
                    <a href="/auth/google" class="btn red darken-2">
                        <i class="fab fa-google left"></i>Log In With Google
                    </a>
                </div>
                <div class="text-center">
                  <a class="small" href="#">Forgot password?</a></div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
